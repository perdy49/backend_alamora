{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "overrides": [
    {
      "files": ["src/server/**/*.js"],
      "env": {
        "node": true,
        "browser": false
      },
      "rules": {
        "no-undef": "off"
      }
    }
  ]
}
